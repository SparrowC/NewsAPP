<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/item_userImage"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@drawable/ic_launcher"
            android:layout_gravity="center"
            android:layout_weight="0"
            android:padding="10dp"/>
        <TextView
            android:id="@+id/item_userName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="username"
            android:textColor="#f333"
            android:textSize="18dp"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"/>
        <TextView
            android:id="@+id/item_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2016-04-18 00:00:00"
            android:textColor="#f333"
            android:textSize="18dp"
            android:layout_alignParentRight="true"
            android:layout_below="@id/item_userName"
            android:layout_gravity="right|bottom"
            android:layout_weight="0"/>
    </LinearLayout>

    <TextView
        android:id="@+id/item_circles"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:textColor="#e000"
        android:text="你好啊，今天是多么美好的一天"
        android:layout_marginTop="8dp"
        android:padding="10dp"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="评论功能正在开发中..."/>
        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/agree"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"/>
    </RelativeLayout>
</LinearLayout>
