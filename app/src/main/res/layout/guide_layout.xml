<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v4.view.ViewPager
        android:id="@+id/vp_guide"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        />
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="55dp">
        <LinearLayout
            android:id="@+id/ll_gray_balls"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/iv_grayBall1"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@drawable/shape_point_gray" />
            <ImageView
                android:id="@+id/iv_grayBall2"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@drawable/shape_point_gray"
                android:layout_marginLeft="20dp"/>
            <ImageView
                android:id="@+id/iv_grayBall3"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@drawable/shape_point_gray"
                android:layout_marginLeft="20dp"/>
        </LinearLayout>
        <ImageView
            android:id="@+id/iv_redBall"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@drawable/shape_point_red"/>
    </RelativeLayout>
</RelativeLayout>
